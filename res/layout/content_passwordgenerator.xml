<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.av.mirror.apapp.passwordgenerator"
    tools:showIn="@layout/activity_passwordgenerator">
<EditText
    android:id="@+id/entertextforpwd"
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:textSize="17dp"
    android:textColor="#212120"
    android:hint="Enter the text"
    android:gravity="center" />



    <Button     android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate password"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <TextView  android:id="@+id/generatedpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/generate"
        android:textColor="#000"
        android:gravity="center"
        />

<Button  android:id="@+id/bt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/generatedpwd"
    android:visibility="invisible"
    android:layout_marginTop="15dp"
    android:layout_centerHorizontal="true"
    android:text="Click on the password "
    />

</RelativeLayout>
